---
layout:
---
<package xmlns='http://www.idpf.org/2007/opf' unique-identifier='isbn' version='2.0'>
  {% assign publication = site.data.publication %}
  {% assign author = site.data.author %}
  {% assign publisher = site.data.publisher %}
  {% assign interior = site.data.interior %}
  <metadata xmlns:dc='http://purl.org/dc/elements/1.1/' xmlns:opf='http://www.idpf.org/2007/opf'>
    <dc:format>application/epub+zip</dc:format>
    <dc:language>en-US</dc:language>
    <dc:title>{{ publication.title }}</dc:title>
    <dc:identifier id='isbn' opf:scheme='ISBN'>{{ publication.isbn }}</dc:identifier>
    <dc:publisher>{{ publisher.name }}</dc:publisher>
    <dc:date opf:event='publication'>{{ publication.date }}</dc:date>
    <dc:description>{{ publication.description }}</dc:description>
    <dc:creator opf:role='aut' opf:file-as='{{ author.sort }}'>{{ author.name }}</dc:creator>
    {% for subject in publication.subjects %}
    <dc:subject>{{ subject }}</dc:subject>
    {% endfor %}
    {% for genre in publication.genres %}
    <dc:type>{{ genre }}</dc:type>
    {% endfor %}
    {% for notice in publication.copyright %}
    <dc:rights>{{ notice | escaped_once }}</dc:rights>
    {% endfor %}
  </metadata>
  <manifest>
    {% for file in interior.spine %}
    <item href='{{ file }}' id='{{ file | slugify }}' media-type='application/xhtml+xml'/>
    {% endfor %}
    {% for type in interior.references %}
    {% for file in type.files %}
    <item href='{{ file }}' id='{{ file | slugify }}' media-type='{{ type.mimetype }}'/>
    {% endfor %}
    {% endfor %}
    <item href='toc.ncx' id='ncx' media-type='application/x-dtbncx+xml'/>
  </manifest>
  <spine toc='ncx'>
    {% for file in interior.spine %}
    <itemref idref='{{ file | slugify }}' />
    {% endfor %}
  </spine>
  <guide>
    {% for file in interior.spine %}
    {% assign absolute_url = file | prepend: '/' %}
    {% assign html_page = site.html_pages | where: 'url', absolute_url | first %}
    {% if html_page.guide %}
    <reference href='{{ file }}' title='{{ html_page.title }}' type='{{ html_page.guide }}'/>
    {% endif %}
    {% endfor %}
  </guide>
</package>
